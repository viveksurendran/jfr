<div class="col-lg-12"><h1>Sign up</h1></div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

<div class="form-group">
    <label class="col-sm-2 control-label">First name:</label>
        <div class="col-sm-4">
            <%= f.text_field :emp_firstname, class: "form-control" %>
        </div>
    
    <label class="col-sm-2 control-label">Last name:</label>
        <div class="col-sm-4">
            <%= f.text_field :emp_lastname, class: "form-control" %>
        </div>
</div>
<br />
<br />
<div class="form-group">
    <label class="col-sm-2 control-label">Email:</label>
        <div class="col-sm-4">
            <%= f.text_field :email, class: "form-control" %>
        </div>
    
    <label class="col-sm-2 control-label">Company:</label>
        <div class="col-sm-4">
            <input type="text" class="form-control">
        </div>
</div>

<div class="form-group">
    <label class="col-sm-2 control-label">Password:</label>
        <div class="col-sm-4">
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, class: "form-control" %>
        </div>
    
    <label class="col-sm-2 control-label">Password Confirmation:</label>
        <div class="col-sm-4">
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, class: "form-control" %>
        </div>
</div>

<br />
<br />

<div class="form-group">
    <label class="col-sm-2 control-label">Mobile number:</label>
        <div class="col-sm-4">
            <%= f.text_field :emp_mobile, class: "form-control" %>
        </div>
    
    <label class="col-sm-2 control-label">Phone number:</label>
        <div class="col-sm-4">
            <input type="text" class="form-control">
        </div>
</div>

<div class="clearfix"></div>

<div class="form-group">
    <label class="col-sm-2 control-label">Address 1:</label>
        <div class="col-sm-4">
            <%= f.text_field :emp_add1, class: "form-control" %>
        </div>
    
    <label class="col-sm-2 control-label">Address 2:</label>
        <div class="col-sm-4">
            <%= f.text_field :emp_add2, class: "form-control" %>
        </div>
</div>

<br />
<br />

<div class="form-group">
    <label class="col-sm-2 control-label">City:</label>
        <div class="col-sm-4">
            <%= f.text_field :emp_city, class: "form-control" %>
        </div>
    
    <label class="col-sm-2 control-label">State:</label>
        <div class="col-sm-4">
            <%= f.text_field :emp_state, class: "form-control" %>
        </div>
</div>

<br />
<br />

<div class="form-group">
    <div class="actions col-sm-2">
        <%= f.submit "Sign up", class: "btn btn-submit" %>
        <%= render "employers/shared/links" %>
    </div>
    <% end %>
    
</div>
